{
  "name": "gas-webpack5-template",
  "version": "0.5.0",
  "author": "Chiu, Yung-Hsiang <mirror.tw@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "google-apps-script",
    "google-sheets",
    "webpack",
    "javascript"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@types/google-apps-script": "^1.0.47",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-import": "^2.26.0",
    "gas-webpack-plugin": "^2.2.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.85.1",
    "webpack-cli": "^4.10.0"
  },
  "scripts": {
    "create": "rimraf .clasp.json && mkdir -p dist && clasp create --type sheets --rootDir ./dist && cp ./dist/.clasp.json ./",
    "build:dev": "webpack --mode development",
    "build": "webpack --mode production",
    "first-deploy": "npm build && clasp push && clasp deploy --description first",
    "deploy": "npm run build && clasp push && clasp deploy --description \"pubished@$(date)\" --deploymentId $(jq -r .deploymentId .clasp.json)",
    "open": "clasp open --webapp --deploymentId $(jq -r .deploymentId .clasp.json)"
  }
}
